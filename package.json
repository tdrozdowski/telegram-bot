{
  "name": "telegram-bot",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "packageManager": "bun@1.2.7",
  "scripts": {
    "build": "bun run nest build",
    "build:bun": "bun build --target=bun ./src/main.ts --outdir=./dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "bun run nest start",
    "start:dev": "bun run nest start --watch",
    "start:debug": "bun run nest start --debug --watch",
    "start:prod": "bun run dist/main.js",
    "start:bun": "bun run --bun dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "bun vitest run",
    "test:watch": "bun vitest",
    "test:cov": "bun vitest run --coverage",
    "test:debug": "bun vitest --inspect-brk",
    "test:e2e": "bun vitest run -c vitest.e2e.config.ts",
    "test:actions": "act --container-architecture linux/amd64 -j test",
    "test:actions:e2e": "act --container-architecture linux/amd64 -j test -W .github/workflows/e2e-tests.yml",
    "test:actions:docker": "act --container-architecture linux/amd64 -j build-and-push -W .github/workflows/docker-build-deploy.yml --secret GITHUB_TOKEN=dummy-token",
    "test:actions:all": "act --container-architecture linux/amd64",
    "clean-install": "rm -rf node_modules && bun install"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.12",
    "@nestjs/core": "^11.0.12",
    "@nestjs/platform-express": "^11.0.12",
    "@types/js-yaml": "^4.0.9",
    "axios": "^1.8.4",
    "js-yaml": "^4.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.12",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "bun-types": "^1.2.7",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  }
}
